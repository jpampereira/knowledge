{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-trailing-spaces": "off",
        "arrow-body-style": "off",
        "object-curly-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "no-param-reassign": "off",
        "import/extensions": ["error", "never"]
    }
}
